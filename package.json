{
  "name": "murzik",
  "version": "0.0.1",
  "description": "IM with users which are currently listening to same artist/album/track as you or just leave a message",
  "scripts": {
    "start": "supervisor dist/server",
    "localhost": "sleep 1; which xdg-open && xdg-open http://localhost:8000",
    "browser": "sleep 6; concurrent 'npm run start' 'npm run localhost'",
    "build-server": "webpack --verbose --colors --display-error-details --config webpack.server.js",
    "build-client": "webpack --verbose --colors --display-error-details --config webpack.client.js",
    "build": "concurrent 'npm run build-client' 'npm run build-server'",
    "watch-server": "webpack --verbose --colors --display-error-details --watch --config webpack.server-watch.js",
    "watch-client": "webpack --verbose --colors --display-error-details --config webpack.client-watch.js && webpack-dev-server --config webpack.client-watch.js",
    "watch": "concurrent --kill-others 'npm run watch-client' 'npm run watch-server' 'npm run browser'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/myagoo/murzik.git"
  },
  "author": "Benjamin Millagou <millagou.benjamin@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/myagoo/murzik/issues"
  },
  "homepage": "https://github.com/myagoo/murzik",
  "dependencies": {
    "express": "^4.11.2",
    "immutable": "^3.6.2",
    "lodash": "^3.3.0",
    "material-ui": "^0.7.0",
    "moment": "^2.9.0",
    "morgan": "^1.5.1",
    "react": "^0.12.2",
    "react-router": "^0.12.0",
    "react-tap-event-plugin": "^0.1.4",
    "reflux": "^0.2.5",
    "rest": "^1.3.0",
    "serve-static": "^1.9.1",
    "socket.io": "^1.3.4",
    "socket.io-client": "^1.3.5"
  },
  "devDependencies": {
    "argv": "0.0.2",
    "babel-core": "^4.4.3",
    "babel-loader": "^4.0.0",
    "babel-runtime": "4.7.8",
    "concurrently": "0.0.5",
    "expose-loader": "^0.6.0",
    "jsx-loader": "^0.12.2",
    "less": "^2.4.0",
    "less-loader": "^2.0.0",
    "raw-loader": "^0.5.1",
    "react-hot-loader": "^1.2.3",
    "style-loader": "^0.8.3",
    "supervisor": "^0.6.0",
    "webpack": "^1.5.3",
    "webpack-dev-server": "^1.7.0"
  }
}
